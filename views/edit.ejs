<% include partials/header %>

<div class="ui main text container segment">
	<div class="ui huge header">
		Update Blog
	</div>
	<form class="ui form" action="/blogs/<%=foundBlog._id%>?_method=PUT" method="post">
		<div class="field">
			<label>Title</label>
			<input type="text" name="foundBlog[title]" value="<%=foundBlog.title%>">
		</div>
		<div class="field">
			<label>Image</label>
			<input type="text" name="foundBlog[image]" value="<%=foundBlog.image%>">
		</div>
		<div class="field">
			<label>Blog Content</label>
			<textarea name="foundBlog[body]"><%=foundBlog.body%></textarea>
		</div>
		<input class="ui violet big basic button" type="submit">
	</form>
</div>

<% include partials/footer %>