<% include partials/header %>
<div id="first">
	<div class="ui main text container">
		<div class="ui huge header">RESTful Blog App</div>
		<div class="ui top attached segment">
			<div class="ui divided items">
			<% for(var i=0; i<blogs.length; i++){ %>
				<div class="item">
					<div class="image">
						<img src="<%= blogs[i].image %>">
					</div>
					<div class="content">
						<a class="header" href="/blogs/<%=blogs[i]._id%>"> <%= blogs[i].title %> </a>
						<div class="meta">
							<span><%=blogs[i].created%></span>
						</div>
						<div class="description">
							<p><%- blogs[i].body.substring(0,120) %>....</p>
						</div>
						<div class="extra">
							<a href="/blogs/<%=blogs[i]._id%>" class="ui floated basic blue button">
								Read More   
								<i class="fas fa-angle-right"></i>
							</a>	
						</div>
					</div>
				</div>
			<% } %>	
			</div>
		</div>
	</div>

</div>

<% include partials/footer %>